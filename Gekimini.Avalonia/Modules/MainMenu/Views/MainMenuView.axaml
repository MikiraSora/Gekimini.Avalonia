<views:ViewBase xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:viewModels="clr-namespace:Gekimini.Avalonia.Modules.MainMenu.ViewModels"
                xmlns:views="clr-namespace:Gekimini.Avalonia.Views"
                xmlns:behaviors="clr-namespace:Gekimini.Avalonia.Modules.MainMenu.Behaviors"
                xmlns:menuItems="clr-namespace:Gekimini.Avalonia.Modules.MainMenu.ViewModels.MenuItems"
                xmlns:controls="clr-namespace:Gekimini.Avalonia.Modules.MainMenu.Controls"
                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                x:DataType="viewModels:MainMenuViewModel"
                x:Class="Gekimini.Avalonia.Modules.MainMenu.Views.MainMenuView">
    <Design.DataContext>
        <viewModels:MainMenuViewModel />
    </Design.DataContext>

    <views:ViewBase.Styles>
        <Style Selector=":is(MenuItem)">
            <Setter Property="IsVisible" Value="{Binding IsVisible}" />
            <Setter Property="IsChecked" Value="{Binding IsChecked, Mode=OneWay}" />
            <Setter Property="Command" Value="{Binding Command}" />
            <Setter Property="Header" Value="{Binding Text}" />
            <Setter Property="ItemsSource" Value="{Binding Children}" />
            <Setter Property="behaviors:MenuBehavior.UpdateCommandUiItems" Value="True" />
        </Style>
    </views:ViewBase.Styles>

    <controls:MenuEx ItemsSource="{Binding MenuItems}"/>
</views:ViewBase>