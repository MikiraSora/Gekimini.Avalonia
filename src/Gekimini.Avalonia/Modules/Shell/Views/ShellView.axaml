<views:ViewBase xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:views="clr-namespace:Gekimini.Avalonia.Views"
                xmlns:viewModels="clr-namespace:Gekimini.Avalonia.Modules.Shell.ViewModels"
                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                x:DataType="viewModels:ShellViewModel"
                x:Class="Gekimini.Avalonia.Modules.Shell.Views.ShellView">
    <Design.DataContext>
        <viewModels:ShellViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="Auto,*,Auto">
        <StackPanel DockPanel.Dock="Top">
            <ContentControl Content="{Binding MainMenu}" />
            <ContentControl Content="{Binding ToolBars}" />
        </StackPanel>
        <Grid Grid.Row="1">
            <DockControl Factory="{Binding Factory}" Background="MediumPurple"
                         Layout="{Binding Layout }"
                         Loaded="Control_OnLoaded" />
        </Grid>
        <ContentControl Grid.Row="2" Height="25" DockPanel.Dock="Bottom" Content="{Binding StatusBar}" />
    </Grid>
</views:ViewBase>